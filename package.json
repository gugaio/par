{
  "name": "par",
  "version": "0.0.1",
  "private": true,
  "workspaces": [
    "packages/core",
    "packages/agents/*",
    "packages/server",
    "packages/cli"
  ],
  "scripts": {
    "build": "npm run build -w packages/core && npm run build -w packages/agents/fake && npm run build -w packages/agents/another && npm run build -w packages/server && npm run build -w packages/cli",
    "start": "node packages/cli/dist/index.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "devDependencies": {
    "typescript": "^5.3.3",
    "@types/node": "^20.10.6",
    "vitest": "^1.2.0",
    "@vitest/coverage-v8": "^1.2.0"
  }
}
